    <!-- SLICK CAROUSEL -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script>
    const addListForm = $('#addListForm');
    const addBtn = $('#addBtn');

    addListForm.hide();

    $(document).ready(() => {

        addBtn.on('click', () => {

            addListForm.fadeIn(1500);

        });

    })
    </script>
</body>

</html>